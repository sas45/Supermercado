<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nutella" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_place_holder"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/item_quant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Quant."
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/valido_ate"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/item_expiry"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:text="@string/valido_place_holder"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="35dp"
                android:text="@string/price_place_holder"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>