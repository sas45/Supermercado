<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nutella" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutella"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:text="145,00MT"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/item_quant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quant."
            android:textSize="@dimen/text_size"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/item_expiry"
            android:text="@string/valido_ate"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_expiry"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/valido_place_holder"
            android:textSize="@dimen/text_size"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/item_price"
            android:layout_alignEnd="@+id/item_price" />

    </RelativeLayout>

</LinearLayout>